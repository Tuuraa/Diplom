<UserControl x:Class="WPFComponents.SettingElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFComponents"
             mc:Ignorable="d" 
             Height="100"
             Width="580">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Rectangle RadiusX="15" RadiusY="15" Fill="#3d3d3d" Grid.RowSpan="2"/>

        <TextBlock Text="{Binding Header}" Foreground="White" FontSize="24" Margin="20 10 0 0"/>

        <ToggleButton  Width="35" Margin="10" VerticalAlignment="Center" 
            HorizontalAlignment="Right" IsChecked="{Binding IsEnabled}"/>

        <TextBlock Text="{Binding Description}" Foreground="#FFB3B3B3" FontSize="14" Grid.Row="1" Margin="10"/>

    </Grid>
</UserControl>

